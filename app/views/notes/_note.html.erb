<div class="hidden" id="note_<%=note.id%>">
  <h1><%= note.title %></h1>
  <p><%= note.content %></p>
  <h4><%="#{time_ago_in_words(note.created_at).capitalize} ago create by "%>
    <%= link_to note.user.name, note.user %>
    <%="#{time_ago_in_words(note.updated_at).capitalize} ago update "%>
  </h4>
  <% if note.user == current_user %>
      <%= button_to "edit", edit_note_path(note), id: "edit"+<%=note.id%>, method: :get %>
      <%= button_to "delete", note, method: :delete %>
  <% end %>
</div>
